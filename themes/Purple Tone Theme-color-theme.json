  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#C94A6A", "fontStyle": "italic" }
    },
    {
      "scope": [
        "string.quoted.double",
        "string.quoted.single",
        "string.quoted.template"
      ],
      "settings": { "foreground": "#930dc3" }
    },
    {
      // R numeric floats + Python decimal numerics
      "scope": [
        "constant.numeric.float.decimal.r",
        "constant.numeric.float.python",
        "constant.numeric.dec.python",
        "constant.language.python",
        "constant.language.r"
      ],
      "settings": { "foreground": "#0467D6" }
    },
    {
      "scope": [
    // üêç Python
    "keyword.control.import.python",       // import, from
    "keyword.control.flow.python",         // for, while, if, else, elif
    "keyword.control.conditional.python",
    "keyword.control.loop.python",
    "storage.type.function.python",        // def
    "storage.type.class.python",           // class
    "keyword.control.return.python",       // return
    "support.function.builtin.python",     // print, len, range, etc.

    // üìä R
	"keyword.control.r",        // if, else, for, while, repeat
    "keyword.control.r.return", // return
	"keyword.operator.logical.r",
	"keyword.operator.pipe.r",      // |>
	"keyword.operator.assignment.r",
	"keyword.operator.word",
	"keyword.operator.symbol",
	"keyword.operator",
	"keyword.operator.access.r",
	"punctuation.accessor.r",
	"keyword.operator.access.r",    // @
    "punctuation.accessor.r",       // @ o $
    "punctuation.accessor",         // fallback gen√©rico
    "keyword.operator.member.access",
	"keyword.accessor.dollar.r",
	"keyword.other.r",
	"keyword.control.loop.for.r",
	"keyword.control.conditional.if.r",
	"keyword.control.conditional.else.r",
    "keyword.operator.symbol.r",     // &, &&, |, ||, !
    "keyword.operator.comparison.r",  // ==, !=, <, >, <=, >=
    "keyword.operator.assignment.r",  // <-, =
    "keyword.operator.arithmetic.r",   // +, -, *, /
	"support.function.r", // print, c, seq, rep, etc.

    // üóÑÔ∏è SQL - operaciones principales
    "keyword.other.DML.sql",    // INSERT, UPDATE, DELETE
    "keyword.other.DDL.sql",    // CREATE, ALTER, DROP
    "keyword.other.TCL.sql",    // COMMIT, ROLLBACK
    "keyword.control.sql",
    "support.function.aggregate.sql",
    "support.function.scalar.sql",
	"keyword.other.sql",
	"keyword.other.LUW.sql",       // SELECT, FROM, WHERE, JOIN, GROUP, ORDER
  "keyword.other.alias.sql"


      ],
      "settings": { "foreground": "#A890F0", "fontStyle": "bold" }
    }
